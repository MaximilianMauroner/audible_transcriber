{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../build"
  },
  "package": {
    "productName": "Free Bookmarks",
    "version": "0.0.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": true
      },
      "fs": {
        "readDir": true,
        "readFile": true,
        "writeFile": true,
        "scope": ["$APPDATA/**", "$APPDATA/*", "$APPDATA/", "$APPDATA"]
      },
      "protocol": {
        "asset": true,
        "assetScope": ["$APPDATA/**", "$APPDATA/*", "$APPDATA/", "$APPDATA"]
      },
      "clipboard": {
        "writeText": true
      }
    },
    "windows": [
      {
        "title": "Free Bookmarks",
        "width": 900,
        "height": 900
      }
    ],
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' asset: asset.localhost; media-src 'self' asset: asset.localhost;"
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "mauronermaximilian.free-bookmarks",
      "icon": [
        "icons/16x16.png",
        "icons/32x32.png",
        "icons/192x192.png",
        "icons/512x512.png",
        "icons/icon.png",
        "icons/icon.ico"
      ]
    }
  }
}
