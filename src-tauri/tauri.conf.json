{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../build"
  },
  "package": {
    "productName": "audible_clipper",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": true
      },
      "fs": {
        "readDir": true,
        "readFile": true,
        "scope": ["$APPDATA/**", "$APPDATA/*", "$APPDATA/", "$APPDATA"]
      },
      "protocol": {
        "asset": true,
        "assetScope": ["$APPDATA/**", "$APPDATA/*", "$APPDATA/", "$APPDATA"]
      }
    },
    "windows": [
      {
        "title": "Audible Clips&Bookmarks",
        "width": 900,
        "height": 900
      }
    ],
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' asset:"
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.maximilianmauroner.audible_clipper",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
